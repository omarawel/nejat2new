
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Globale Regel: Niemand kann ohne Authentifizierung auf die Datenbank zugreifen
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Nutzer-Datenbank (Jeder kann nur eigene Daten sehen & bearbeiten)
    match /Users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Freelancer-Jobs (Nur Auftraggeber kann Ã„nderungen vornehmen)
    match /Jobs/{jobId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.owner;
      allow delete: if request.auth != null && request.auth.uid == request.resource.data.owner;
    }

    // Admin-Dashboard: Nur Admins haben vollen Zugriff
    match /Admin/{adminId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}

